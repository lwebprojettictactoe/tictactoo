{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <div class="card-panel">
        <div class="row">
            <h4 class="header2 center">Profil</h4>
            {% if  extension is defined %}      
            <img src="{{ asset('bundles/tttfirst/photo/'~user.id~extension) }}" style="height: 100px; width: 100px;" alt="PhotoProfil">
            {% endif %}
        </div>
        <div class="row">
            <h5>{{ 'Pseudo'|trans }}: {{ user.username }}</h5>
        </div>
        <div class="row">
            <h5>{{ 'Email'|trans }}: {{ user.email }}</h5>
        </div>
            {% if user.nom is null %}
        <div class="row">
            <h5>{{ 'Nom'|trans }}: Non renseigné</h5>
        </div>
            {% else %}
        <div class="row">
            <h5>{{ 'Nom'|trans }}: {{ user.nom }}</h5>
        </div>
            {% endif %}
            {% if user.prenom is null %}
        <div class="row">
            <h5>{{ 'Prenom'|trans }}: Non renseigné</h5>
        </div>
            {% else %}
        <div class="row">
            <h5>{{ 'Prenom'|trans }}: {{ user.prenom }}</h5>
        </div>
            {% endif %}
            
    </div>
</div>
<div class="fos_user_user_show">
</div>
<script type="text/javascript" src="{{ asset('bundles/tttfirst/materialize/js/materialize.min.js') }}"></script>