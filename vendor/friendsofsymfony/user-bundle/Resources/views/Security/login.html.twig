{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	{% include "header.html.twig" %}
	<div id="login-page" class="row valign-wrapper">
		<div class="col s12 z-depth-4 card-panel">
			<form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
				<div class="row">
					<div class="input-field col s12 center">
						<h4 class="header2">Connexion</h4>
					</div>
				</div>
				<div class="row margin">
					<div class="input-field col s12">
						<i class="material-icons prefix">account_circle</i>
						<input id="username" type="text" name="_username" value="{{ last_username }}"
							   required="required">
						<label for="username" class="center-align">Username</label>
					</div>
				</div>
				<div class="row margin">
					<div class="input-field col s12">
						<i class="material-icons prefix">lock</i>
						<input id="password" type="password" name="_password" required="required">
						<label for="password">Password</label>
					</div>
				</div>
				<div class="row margin">
					<div class="col s12">
						<input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
						<label for="remember_me">Se souvenir de moi</label>
					</div>
				</div>
				<div class="row">
					<div class="col s12">
						<button class="btn cyan wves-effect waves-light col s12" type="submit" name="_submit" id="_submit">Se connecter</button>
					</div>
				</div>
			</form>
			<div class="row">
				<div class="input-field col s6 m6 l6">
					<p class="margin medium-small left-align"><a class="red-text" href="{{ path('ttt_first_homepage')}}">Revenir Ã  l'accueil</a></p>
				</div>
				<div class="input-field col s6 m6 l6">
					<p class="margin medium-small right-align"><a class="orange-text" href="{{ path('fos_user_registration_register') }}">S'inscrire!</a></p>
				</div>
			</div>
		</div>
	</div>
{% endblock fos_user_content %}
